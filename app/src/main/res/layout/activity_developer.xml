<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".developer">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="@dimen/text_margin"
           android:gravity="center_horizontal"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:id="@+id/developer_image"
                android:layout_marginTop="36dp"
                android:src="@drawable/nish1">

            </de.hdodenhof.circleimageview.CircleImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NISHANTH MEKALA"
                android:layout_marginTop="36dp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/textColor"
                android:textSize="@dimen/title_size"
                android:fontFamily="@string/bold">

            </TextView>




            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="36dp"

                 android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="nishanthmekala39@gmail.com"

                    android:layout_marginHorizontal="@dimen/text_margin"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/title_size"
                    android:fontFamily="@string/light">

                </TextView>



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="I am an aspiring android developer student at MNNIT Allahabad pursuing Bachelor's degree in Electronics and Communication Engineering.For further detals..please visit the following..Thank You"
                    android:layout_marginTop="@dimen/title_size"
                    android:layout_marginHorizontal="@dimen/text_margin"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/text_margin"
                    android:fontFamily="@string/light">

                </TextView>


            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="36dp"
                android:id="@+id/linkedin">

                <include layout="@layout/linkedin_layout">

                </include>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="36dp"
                android:id="@+id/facebook">

                <include layout="@layout/facebook_layout">

                </include>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="36dp"
                android:id="@+id/instagram">

                <include layout="@layout/insta_layout">

                </include>


            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginVertical="40dp"
                android:text="Thank You"
                android:textSize="@dimen/title_size"
                android:fontFamily="@string/bold">

            </TextView>






        </LinearLayout>


    </ScrollView>



</com.google.android.material.card.MaterialCardView>